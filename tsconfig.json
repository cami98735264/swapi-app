{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/utils/hooks/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@screens/*": ["./src/screens/*"],
      "@assets/*": ["./src/assets/*"],
      "@utils/*": ["./src/utils/*"],
      "@config/*": ["./src/config/*"],
    },
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true
  }
}
